{
    "compilerOptions": {
        "baseUrl": "../src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2016",
            "es2017",
            "es6",
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "paths": {
            "#/*": ["*"],
            "#/common/*": ["common/*"],
            "#/declare/*": ["declare/*"],
            "#/service/*": ["service/*"],
            "#/util/*": ["util/*"],
        },
        "sourceMap": true,
        "strict": true,
        "target": "es6"
    }
}